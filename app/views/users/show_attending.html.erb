<% provide(:title, @title) %>
<div class="row, attendance">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Interests:</b> <%= @user.wants.count %></span>
      <span><b>Specialties:</b> <%= @user.skills.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% unless (@user == current_user) %>
        <% if current_user.following?(@user) %>
          <%= render 'users/unfollow' %>
        <% else %>
          <%= render 'users/unfollow' %>
        <% end %>
      <% end %>
    </section>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @events.any? %>
      <ul class="users">
        <%= render @events %>
      </ul>
      <%= will_paginate @events, container: false %>
    <% else %>
      <%= "#{@name.split[0]} is not currently attending any events." %>
    <% end %>
  </div>
</div>

<div>
  <%= link_to 'Back', @user %> |
  <%= link_to 'View All Users', users_path %>
</div>