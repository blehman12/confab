<% provide(:title, @user.name) %>
<script type="text/javascript">
function HideContent(d) {
document.getElementById(d).style.display = "none";
}
function ShowContent(d) {
document.getElementById(d).style.display = "block";
}
function ReverseDisplay(d) {
if(document.getElementById(d).style.display == "none") { document.getElementById(d).style.display = "block"; }
else { document.getElementById(d).style.display = "none"; }
}
function HideAllShowOne(d) {
var IDvaluesOfEachDiv = "userwants userskills usercomm";

//-------------------------------------------------------------
IDvaluesOfEachDiv = IDvaluesOfEachDiv.replace(/[,\s"']/g," ");
IDvaluesOfEachDiv = IDvaluesOfEachDiv.replace(/^\s*/,"");
IDvaluesOfEachDiv = IDvaluesOfEachDiv.replace(/\s*$/,"");
IDvaluesOfEachDiv = IDvaluesOfEachDiv.replace(/  +/g," ");
var IDlist = IDvaluesOfEachDiv.split(" ");
for(var i=0; i<IDlist.length; i++) { HideContent(IDlist[i]); }
ShowContent(d);
}</script>

<div class="box">
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
</div>

<% if (@user == current_user) || current_user.try(:admin?) %>
  <div class="box">
    <%= @user.email %>
  </div>
<% end %>
<section>
  <%= render 'shared/stats' %>
</section>
<%= render 'follow_form' if signed_in? %>
<br>
<div>
  <a href="javascript:HideAllShowOne('userwants')">Your Interests</a> |
  <a href="javascript:HideAllShowOne('userskills')">Your Specialties</a> |
  <a href="javascript:HideAllShowOne('usercomm')">Your Preferred Communications</a>
</div>
<br>
<div class="box">
<div id="userwants" style="display:none;">
  <h3>What <%= @name_for_wants %> Looking For (<%= @user.wants.count %>)</h3>
  <div>
    <% if @user.wants.any? %>
      <ol class="wants">
        <%= render @wants %>
      </ol>
      <%= will_paginate @wants %>
    <% else %>
      <p><%= @name_none_posted %> not posted any topics of interest.</p>
    <% end %>
  </div>
    <% if @user == current_user %>
      <div>
        <%= render 'shared/want_form' %>
      </div>
    <% end %>
</div>

<div id="userskills" class="box" style="display:none">
  <h3>Specialties (<%= @user.skills.count %>)</h3>
  <div>
    <% if @user.skills.any? %>
      <ol class="skills">
        <%= render @skills %>
      </ol>
      <%= will_paginate @skills %>
    <% else %>
      <p><%= @name_none_posted %> not posted any specialties.</p>
    <% end %>
  </div>
  <% if @user == current_user %>
    <div>
      <%= render 'shared/skill_form' %>
    </div>
  <% end %>
</div>

<div id="usercomm" style="display:none">
  <h3>Preferred Methods of Communication (<%= @user.communications.count %>)</h3>
  <div>
    <% if @user.communications.any? %>
      <ol class="communications">
        <%= render @communications %>
      </ol>
      <%= will_paginate @communications %>
    <% else %>
        <p><%= @name_none_posted %> not posted any preferred methods of communication.</p>
    <% end %>
  </div>
  <% if @user == current_user %>
    <div>
      <%= render 'shared/communication_form' %>
    </div>
  <% end %>
</div>
</div>