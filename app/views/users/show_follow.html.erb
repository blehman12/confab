<% provide(:title, @title) %>
<div class="row">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Interests:</b> <%= @user.wants.count %></span>
      <span><b>Specialties:</b> <%= @user.skills.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>

    </section>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="microposts">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>