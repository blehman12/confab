<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.date_select :start %>
  </div>
  <div class="field">
    <%= f.label :stop %><br>
    <%= f.date_select :stop %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :contact, "Please enter the primary contact information or this event:" %><br>
    <%= f.text_field :contact %>
  </div>

  <%= f.radio_button :recurrence, 0, checked: true %>
  <%= label :recurrence, "One time event" %><br>

  <%= f.radio_button :recurrence, 1 %>
  <%= label :recurrence, "Annual"%><br>

  <%= f.radio_button :recurrence, 2 %>
  <%= label :recurrence, "Monthly" %><br>

  <%= f.radio_button :recurrence, 3 %>
  <%= label :recurrence, "Weekly"%>

  <div class="field">
    <%= f.collection_select :theme, Event::THEME, :to_s, :to_s, required: true, prompt: 'Select a Primary Theme for Your Event' %>
  </div>

  <div class="field">
    <%= f.label :category, "Category" %><br>
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <%= f.label :subcategoryA, "Subcategory" %><br>
    <%= f.text_field :subcategoryA %>
  </div>

  <div class="field">
    <%= f.label :subcategoryB, "Subcategory" %><br>
    <%= f.text_field :subcategoryB %>
  </div>

  <div class="field">
    <%= f.label :subcategoryC, "Subcategory" %><br>
    <%= f.text_field :subcategoryC %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
