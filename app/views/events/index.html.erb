<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>Location</th>
      <th>Theme</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Subcategory</th>
      <th>Subcategory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.start %></td>
        <td><%= event.location %></td>
        <td><%= event.theme %></td>
        <td><%= event.category %></td>
        <td><%= event.subcategoryA %></td>
        <td><%= event.subcategoryB %></td>
        <td><%= event.subcategoryC %></td>
        <% if current_user.admin? || current_user?(event.user) %>
          <td><%= link_to "edit", edit_event_path(event) %> |
          <%= link_to "delete", event, method: :delete,
                                  data: { confirm: "You sure?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
