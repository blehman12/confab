<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>Stop</th>
      <th>Location</th>
      <th>Address</th>
      <th>Recurrence</th>
      <th>Contact</th>
      <th>Theme</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Subcategory</th>
      <th>Subcategory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start %></td>
        <td><%= event.stop %></td>
        <td><%= event.location %></td>
        <td><%= event.address %></td>
        <td><%= event.recurrence %></td>
        <td><%= event.contact %></td>
        <td><%= event.theme %></td>
        <td><%= event.category %></td>
        <td><%= event.subcategoryA %></td>
        <td><%= event.subcategoryB %></td>
        <td><%= event.subcategoryC %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

