<p id="notice"><%= notice %></p>

<h2>
  <%= @event.name %>
</h2>

<section>
  <% if current_user.attending?(@event) %>
    <%= render 'unattend' %>
  <% else %>
    <%= render 'attend' %>
  <% end %>
</section>

<section>
  <%= render 'events/attendance_stats' %>
</section>

<p>
  <%= @date_range %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Address:</strong>
  <%= @event.address %>
</p>

<p>
  <strong>Recurrence:</strong>
  <%= @recurrence %>
</p>

<p>
  <strong>Contact:</strong>
  <%= @event.contact %>
</p>

<p>
  <strong>Category:</strong>
  <%= @event.theme %> |
  <%= @event.category %> -
  <%= @event.subcategoryA %> -
  <%= @event.subcategoryB %> -
  <%= @event.subcategoryC %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @event.tags %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
