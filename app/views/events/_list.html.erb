<%# app/views/students/_list.html.erb %>
<div id="filterrific_results">

  <div>
    <%= page_entries_info events # provided by will_paginate %>
  </div>

  <table>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>Theme</th>
      <th>Category</th>
      <th>Tags</th>
    </tr>
    <% events.each do |event| %>
      <tr>
        <td><%= link_to(event.name, event_path(event)) %></td>
        <td><%= event.start %></td>
        <td><%= event.theme %></td>
        <td><%= event.category %></td>
        <td><%= event.tags %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= will_paginate events # provided by will_paginate %>