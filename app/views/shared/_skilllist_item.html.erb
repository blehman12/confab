<li id="<%= skilllist_item.id %>">
  <%= link_to gravatar_for(skilllist_item.user), skilllist_item.user %>
  <span class="user">
    <%= link_to skilllist_item.user.name, skilllist_item.user %>
  </span>
  <span class="skill"><%= skilllist_item.skill %></span>
  <span class="level"><%= skilllist_item.level %></span>
  <span class="tag"><%= skilllist_item.tag %></span>
  <span class="category"><%= skilllist_item.category %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(skilllist_item.created_at) %> ago.
  </span>
  <% if current_user?(skilllist_item.user) %>
    <%= link_to "delete", skilllist_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: skilllist_item.skill %>
  <% end %>
</li>
