<%= form_for(@want) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :wanted, "What are you looking to learn more about?" %><br>
    <%= f.text_field :wanted %>
  </div>
  <div class="field">
    <%= f.label :priority, "How high of a priority is this compared to your other interests on a scale of 1-10 (10 being the highest)?" %><br>
    <%= f.collection_select :priority, Want::PRIORITY, :to_int, :to_int %>
  </div>
  <div class="field">
    <%= f.label :tag, "Relevant tags:" %><br>
    #<%= f.text_field :tag, placeholder: "(e.g. rubyonrails, doctorwho, etc.)" %>
  </div>
  <div class="field">
    <%= f.label :theme_id, "Please select a relevant theme and category for your interest." %><br>
    <%= f.collection_select :theme_id, Theme.order(:theme), :id, :theme, prompt: "--  Select Theme --" %>
    <%= f.grouped_collection_select :category_id, Theme.order(:theme), :categories, :theme, :id, :category, prompt: "-- Select Category --"  %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>