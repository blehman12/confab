<%= form_for(@want) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :wanted, "What are you looking to learn more about?" %><br>
    <%= f.text_field :wanted %>
  </div>
  <div class="field">
    <%= f.label :priority, "How high of a priority is this compared to your other interests on a scale of 1-10 (10 being the highest)?" %><br>
    <%= f.collection_select :priority, Want::PRIORITY, :to_int, :to_int %>
  </div>
  <div class="field">
    <%= f.label :tag, "Relevant tags:" %><br>
    #<%= f.text_field :tag, placeholder: "(e.g. rubyonrails, doctorwho, etc.)" %>
  </div>
  <div class="field">
    <%= f.label :category, "Please select a relevant theme for your specialty." %><br>
    <%= f.collection_select :category, Event::THEME, :to_s, :to_s, required: true, prompt: 'Select a Theme' %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>