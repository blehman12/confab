<li id="<%= wantlist_item.id %>">
  <% unless @user == current_user %>
  <%= link_to gravatar_for(wantlist_item.user), wantlist_item.user %>
  <span class="user">
    <%= link_to wantlist_item.user.name, wantlist_item.user %>
  </span>
  <% end %>
  <span class="want"><%= wantlist_item.wanted %></span>
  <span class="priority"><%= wantlist_item.priority %></span>
  <span class="tag"><%= wantlist_item.tag %></span>
  <span class="category"><%= wantlist_item.category %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(wantlist_item.created_at) %> ago.
  </span>
  <% if current_user?(wantlist_item.user) %>
    <%= link_to "delete", wantlist_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: wantlist_item.wanted %>
  <% end %>
</li>
